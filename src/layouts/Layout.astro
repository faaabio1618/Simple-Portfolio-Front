---
import '../styles/global.css';
import '@ckeditor/ckeditor5-basic-styles/theme/code.css';
import '@ckeditor/ckeditor5-image/theme/image.css';
import 'photoswipe/style.css';
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import type Site from "../interfaces/Site";
import type Photographer from "../interfaces/Photographer";
const {site, photographer, subtitle, title} = Astro.props as {
    site: Site,
    title?: string,
    subtitle?: string,
    photographer: Photographer
}
const pageTitle = site.Name;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content="Bration Portfolio - Built by filippi.dev"/>
    <meta name="description" content=`Portfolio website of photographer ${site.PhotographerName}`/>
    <meta name="keywords" content=`photography, portfolio, ${site.PhotographerName}, ${site.Name}`/>
    <meta name="author" content={site.PhotographerName}/>
    <link rel="stylesheet" href="https://use.typekit.net/nsb5rjc.css"/>
    <title>{pageTitle}</title>
    <script src="https://static.elfsight.com/platform/platform.js" async is:inline/>
</head>
<body class="font-sans flex flex-col min-h-screen">
<Header site={site} title={title} subtitle={subtitle} />
<main class="flex-grow">
    <slot/>
</main>
<Footer site={site} photographer={photographer}/>

<!-- PhotoSwipe template -->
<div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="pswp__bg"></div>
    <div class="pswp__scroll-wrap">
        <div class="pswp__container">
            <div class="pswp__item"></div>
            <div class="pswp__item"></div>
            <div class="pswp__item"></div>
        </div>
        <div class="pswp__ui pswp__ui--hidden">
            <div class="pswp__top-bar">
                <div class="pswp__counter"></div>
                <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>
                <button class="pswp__button pswp__button--share" title="Share"></button>
                <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>
                <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>
                <div class="pswp__preloader">
                    <div class="pswp__preloader__icn">
                        <div class="pswp__preloader__cut">
                            <div class="pswp__preloader__donut"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
                <div class="pswp__share-tooltip"></div>
            </div>
            <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)"></button>
            <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)"></button>
            <div class="pswp__caption">
                <div class="pswp__caption__center"></div>
            </div>
        </div>
    </div>
</div>

</body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
